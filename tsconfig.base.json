{
"compilerOptions": {
  "target": "ES2022",
  "module": "ESNext",
  "moduleResolution": "node",
  "esModuleInterop": true,
  "skipLibCheck": true,
  "strict": true,
  "resolveJsonModule": true,
  "allowSyntheticDefaultImports": true,
  "baseUrl": ".",
    "paths": {
      "@shared-types/*": ["packages/shared-types/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}